---
import { Search } from "./search";
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";

const isHomePage = Astro.url.pathname === "/";
---

<header
  class="flex justify-between items-center mb-5 gap-5 p-3 shadow-md border-b border-zinc-800 sticky top-0"
>
  <a
    class="border-2 border-white rounded p-2 bg-zinc-900 hover:text-zinc-900 hover:bg-gray-300"
    href="/">Home</a
  >
  <a href="/"><Image src={logo} alt={"Streams On logo"} width={50} /></a>
  {!isHomePage && <Search />}
</header>
