---
import { Image } from "astro:assets";

interface Props {
  id: number;
  title: string;
  releaseDate: string;
  poster: string;
}

const { id, title, releaseDate, poster } = Astro.props;
---

<a
  class="w-fit bg-zinc-700 rounded-md group hover:bg-zinc-900 transition-all"
  href={`/movie/${id}`}
>
  <div class="text-gray-300 relative rounded-md">
    <Image
      src={`https://media.themoviedb.org/t/p/original${poster}`}
      width={300}
      height={300}
      class="group-hover:opacity-35 transition ease-in-out duration-150 rounded-md aspect-[11/16] object-cover"
      alt={""}
    />
    <div
      class="absolute p-2 bottom-0 hidden top-0 opacity-0 group-hover:block group-hover:opacity-100 transition-opacity duration-500 left-0"
    >
      <h3 class="text-lg font-bold">{title}</h3>
      <span class="text-sm mt-full inline-block">{releaseDate}</span>
    </div>
  </div>
</a>
